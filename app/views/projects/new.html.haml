.section
	.container
		.row
			.col-lg-12

				= @title

				= simple_form_for @project do |f| 
					= f.input :name, required: true
					= f.input :description, required: true
					= f.input :location, required: true, priority: ['Singapore'], collection: ['Singapore', 'United States', 'Canada'], default: 'Singapore'

					= f.input :difficulty, required: true, collection: ['easy', 'medium', 'hard'], as: :radio_buttons

					= f.input :stage, required: true, collection: ['Just an idea','Pretty certain', 'Successful project'], as: :radio_buttons, label: 'At what stage is your project?'

					= f.input :seeking, required: true

					= f.input :project_email, required: true, as: :email

					#datetimepicker.input-append.date
						= f.input :start_time, value: DateTime.now, inline_label: true, required: true do
							= f.input_field :start_time, :as => :string, "data-format" => "yyyy/MM/dd hh:mm:ss" 
							%span.add-on
								%i{"data-date-icon" => "icon-calendar", "data-time-icon" => "icon-time"}
					#datetimepicker2.input-append.date
						= f.input :end_time, value: DateTime.now, inline_label: true, required: true do
							= f.input_field :end_time, :as => :string, "data-format" => "yyyy/MM/dd hh:mm:ss" 
							%span.add-on
								%i{"data-date-icon" => "icon-calendar", "data-time-icon" => "icon-time"}
					= f.input :avatar, required: true

					= f.submit 'Create project'




				%script{src: "http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js", type: "text/javascript"}
					:cdata
				%script{src: "http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js", type: "text/javascript"}
					:cdata
				%script{src: "http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.min.js", type: "text/javascript"}
					:cdata
				%script{src: "http://tarruda.github.com/bootstrap-datetimepicker/assets/js/bootstrap-datetimepicker.pt-BR.js", type: "text/javascript"}
					:cdata
				:javascript
					$('#datetimepicker').datetimepicker({
						format: 'dd/MM/yyyy hh:mm:ss',
						language: 'en'
					});
					$('#datetimepicker2').datetimepicker({
						format: 'dd/MM/yyyy hh:mm:ss',
						language: 'en'
					});

