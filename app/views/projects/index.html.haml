.section
  .container
    .row
      .col-lg-12.text-center
        %h2 Active Projects
        %hr/

      - @open_projects.each do |p|
        .col-lg-4.col-md-4.col-sm-6
          %a{href: project_path(p)}
            %img.img-responsive.img-home-portfolio
              .h4          
                =p.name
              =image_tag p.avatar.url
                