.section
	.container
		.row
			.col-lg-12
				%h2 Admin Controls
				%hr/
				%h3 Users
				%table
					- @users.each do |u|
						%tr
							%td= link_to u.name, profile_path(u)
							%td= link_to "Delete User Account", remove_user_path(u), :data => { :confirm => "Deleting this user removes his projects. Are you sure?" }, :method => :delete
				%h3 Projects