!!!
%html
	%head
		%meta{charset: "utf-8"}/
		%meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
		%title= content_for?(:title) ? yield(:title) : "Collab"
		%meta{content: content_for?(:description) ? yield(:description) : "Rails Bootstrap", name: "description"}/
		= stylesheet_link_tag "application", :media => "all"
		= csrf_meta_tags
	%body
		.container
			= render 'layouts/messages'
			- if notice
				%p.alert.alert-notice= notice
			- if alert
				%p.alert.alert-error= alert
		%header.navbar.navbar-fixed-top= render 'layouts/navigation'


		%main{role: "main"}
			

			= yield

		%footer.footer
			.container
				Copyright Â© Collab.do 2013
		= javascript_include_tag "application"